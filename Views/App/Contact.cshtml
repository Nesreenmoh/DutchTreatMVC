@model DutchTreat.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact Page";
}

@section Scripts{
    
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.Name">UserName:</label>
                <input class="form-control" asp-for="@Model.Name" />
                <span  class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password">Password:</label>
                <input class="form-control" asp-for="@Model.Password" type="password" />
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email">Email:</label>
                <input class="form-control" asp-for="@Model.Email" type="email" />
                <span  class="text-danger" asp-validation-for="@Model.Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Subject">Subject:</label>
                <input class="form-control" asp-for="@Model.Subject" type="text" />
                <span  class="text-danger" asp-validation-for="@Model.Subject"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Message">Message:</label>
                <textarea class="form-control" asp-for="@Model.Message" rows="4"></textarea>
                <span  class="text-danger" asp-validation-for="@Model.Message"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-envelope"></i> Send Message</button>
                <span>@ViewBag.Message</span>
            </div>
        </form>
        
    </div>
</div>